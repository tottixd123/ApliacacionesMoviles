<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF"
    tools:context=".Admin.AdminMenu">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fitsSystemWindows="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="135dp"
                android:layout_height="105dp"
                android:layout_marginTop="37dp"
                app:srcCompat="@drawable/gata" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="12dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="HOLA ADMINISTRADOR"
                android:textColor="#13814b"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Bienvenido de Nuevo"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="@drawable/admincerrar"
                android:orientation="horizontal"
                tools:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imageView161"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/candado" />

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="142dp"
                    android:layout_height="29dp"
                    android:layout_margin="0dp"
                    android:layout_marginStart="26dp"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:text="Editar Contraseña"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:translationY="2dp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/adminborder">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="412dp"
                    android:layout_height="159dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView2as"
                                android:layout_width="46dp"
                                android:layout_height="53dp"
                                app:srcCompat="@drawable/amasuser" />

                            <Button
                                android:id="@+id/btnCrearUsuario"
                                android:layout_width="107dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/admincerrar"
                                android:text="Crear Usuario"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.487"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.808" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imagdeViasas"
                                android:layout_width="46dp"
                                android:layout_height="53dp"
                                app:srcCompat="@drawable/aadmin" />

                            <Button
                                android:id="@+id/user_admin"
                                android:layout_width="107dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/admincerrar"
                                android:text="Promover a Admin"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.487"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.808" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imagdeAdmin"
                                android:layout_width="46dp"
                                android:layout_height="53dp"
                                app:srcCompat="@drawable/atiket" />

                            <Button
                                android:id="@+id/gestion_tickets"
                                android:layout_width="107dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/admincerrar"
                                android:text="Gestionar Tickets"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.487"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.808" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="413dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imagdeAdmias"
                                android:layout_width="46dp"
                                android:layout_height="53dp"
                                app:srcCompat="@drawable/auser" />

                            <Button
                                android:id="@+id/btnManageUsers"
                                android:layout_width="107dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/admincerrar"
                                android:text="Gestionar Usuarios"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.487"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.808" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imagdeVstos"
                                android:layout_width="46dp"
                                android:layout_height="53dp"
                                app:srcCompat="@drawable/agesttraba" />

                            <Button
                                android:id="@+id/btnWorkerManagement"
                                android:layout_width="107dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/admincerrar"
                                android:text="Gestionar Personal"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.487"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.808" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imagdeVstosxd"
                                android:layout_width="46dp"
                                android:layout_height="53dp"
                                app:srcCompat="@drawable/alistauser" />

                            <Button
                                android:id="@+id/btnListaUser"
                                android:layout_width="107dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/admincerrar"
                                android:text="Lista de Usuarios"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.487"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.808" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="413dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageReport"
                                android:layout_width="46dp"
                                android:layout_height="53dp"
                                app:srcCompat="@drawable/areporte" />

                            <Button
                                android:id="@+id/btnReportes"
                                android:layout_width="107dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/admincerrar"
                                android:text="Reportes"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout34"
                    android:layout_width="413dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout3">


                    <androidx.cardview.widget.CardView
                        android:layout_width="190dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="6dp">

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp"
                                app:srcCompat="@drawable/cerrarsesion" />

                            <Button
                                android:id="@+id/btnCerrarSesion"
                                android:layout_width="130dp"
                                android:layout_height="45dp"
                                android:layout_alignParentTop="true"
                                android:layout_margin="0dp"
                                android:background="@drawable/admincerrar"
                                android:backgroundTint="#068f41"
                                android:padding="0dp"
                                android:radius="6dp"
                                android:text="Cerrar Sesión"
                                android:textSize="14sp"
                                android:tint="#068f41"
                                tools:layout_editor_absoluteY="473dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>